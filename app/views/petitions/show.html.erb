<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <h1><%= @petition.title %></h1>
      <p><%= @petition.body %></p>

      <% percentage =  number_to_percentage((@petition.signature_count.to_f / @petition.signature_threshold) * 100) %>
        <div class="progress <%= progress_percentage(percentage)  %>">
          <div class="bar" style="width: <%="#{percentage}" %>"></div>
        </div>
        Signatures needed: <%= number_with_delimiter(@petition.signatures_needed)  %>
        <br/>
        Signature count: <%= number_with_delimiter(@petition.signature_count) %>
        <br/>
        Time left: <%= distance_of_time_in_words(DateTime.now, @petition.deadline) %>
        <br/>

       URL <%= link_to @petition.url, @petition.url, target: "_blank" %>
    </div>
  </div>
</div>
